<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/bootstrap')%>
    <title>User Edit</title>
  </head>

  <body>
    <%- include('partials/navbar') %>
    <%- include('partials/errorwarning') %>
    <div class="col-md-6">
        <h3>Edit Account</h3>
        <h5><%=data.username%></h5>
        <form action="./settings" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              class="form-control"
              name="email"
              value="<%= data.email%>"
            />
          </div>
          <div class="form-group">
            <label for="newpassword"
              >New Password: (leave blank to keep password)</label
            >
            <input
              type="password"
              class="form-control"
              name="newpassword"
              value=""
            />
          </div>
          <div class="form-group">
            <label for="password">Current Password</label>
            <input type="password" class="form-control" name="password" />
          </div>
          <button type="submit" class="btn btn-primary">Save</button>
          <a
            href="./"
            class="btn btn-secondary active"
            role="button"
            aria-pressed="true"
            >Cancel</a
          >
        </form>
    </div>

    <!-- <a
      href="./delete"
      class="btn btn-secondary active"
      role="button"
      aria-pressed="true"
      >Delete Account</a
    > -->
  </body>
</html>
